<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.storeproject">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission
        android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        tools:ignore="ScopedStorage" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.StoreProject">
        <activity
            android:name=".customerSide.activity.ButtomActivity"
            android:exported="false" />
        <activity
            android:name=".customerSide.ShowCategroyWithProductCustomer"
            android:exported="false" />
        <activity
            android:name=".activity.MainActivity"
            android:exported="false" />

        <activity
            android:name=".activity.SplashActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activity.UpdateCategoryActivity" />
        <activity android:name=".activity.UpdateProductActivity" />
        <activity android:name=".activity.AddCategoryActivity" />
        <activity android:name=".activity.AddProductActivity" />
        <activity android:name=".activity.ShowProductCategoryActivity" />
        <activity android:name=".activity.ProductDetailsActivity" />
        <activity android:name=".activity.LoginCustomerActivity" />
        <activity android:name=".activity.SignupActivity" />
    </application>

</manifest>